<Window x:Class="CombatManager.QuickCreatureAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:CombatManager"
        mc:Ignorable="d"
        Title="QuickCreatureAdd" Height="300" Width="200">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Margin="0 5"
                       FontWeight="Bold"
                       FontSize="14"
                       HorizontalAlignment="Center">Quick Creature Insert</TextBlock>
            <TextBlock Margin="0 5 0 5">Name</TextBlock>
            <TextBox Name="Name"
                     Width="150"
                     Margin="0 0 0 5"></TextBox>
            <TextBlock>Initiative</TextBlock>
            <TextBox Name="Initiative"
                     Width="150"
                     Margin="0 0 0 5"
                     PreviewTextInput="NumOnly_OnPreviewTextInput"></TextBox>
            <Button Name="AddCreatureButton"
                    HorizontalAlignment="Center"
                    Width="100"
                    Click="AddCreatureButton_OnClick">Add Creature</Button>
        </StackPanel>
    </Grid>
</Window>
